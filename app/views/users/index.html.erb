<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
    <h1 class="h2">Member Index</h1>
</div>

<div class="table-responsive">
<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Permissions</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.full_name %></td>
          <td><%= user.email %></td>
          <td>Permissions</td>
          <td>
            <%= link_to "View", user_path(user.id), class: "badge badge-success" %>
            <%= link_to "Edit", edit_user_path(user.id), class: "badge badge-info" %>
          </td>
        </tr>
    <% end %>
  </tbody>
</table>
</div>