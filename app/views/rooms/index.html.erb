<div class="container">
<div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th>Resource Name</th>
          <th>Number</th>
          <th>Type</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @rooms.each do |room| %>
            <tr>
              <td><%= room.name %></td>
              <td><%= room.number %></td>
              <td><%= room.classification %></td>
              <td>
                <%= link_to "View", room_path(room.id), class: "badge badge-success" %>
                <%= link_to "Edit", edit_room_path(room.id), class: "badge badge-info" %>
              </td>
            </tr>
        <% end %>
      </tbody>
    </table>
</div>

